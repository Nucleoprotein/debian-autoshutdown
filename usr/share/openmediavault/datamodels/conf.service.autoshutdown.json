{
	"type": "config",
	"id": "conf.service.autoshutdown",
	"title": "AutoShutdown",
	"queryinfo": {
		"xpath": "//services/autoshutdown",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": 0
		},
		"cycles": {
			"type": "integer",
			"minimum": 1,
			"maximum": 999,
			"default": 6
		},
		"sleep": {
			"type": "integer",
			"minimum": 1,
			"maximum": 9999,
			"default": 180
		},
		"ipcheck": {
			"type": "boolean",
			"default": true
		},
		"range": {
			"type": "string",
			"default": "2..254,0x0..0xFFFF"
		},
		"shutdowncommand": {
			"type": "integer",
			"minimum": 0,
			"maximum": 4,
			"default": 0
		},
		"checkclockactive": {
			"type": "boolean",
			"default": false
		},
		"uphours_begin": {
			"type": "integer",
			"minimum": 0,
			"maximum": 23,
			"default": 6
		},
		"upmins_begin": {
			"type": "integer",
			"minimum": 0,
			"maximum": 59,
			"default": 0
		},
		"uphours_end": {
			"type": "integer",
			"minimum": 0,
			"maximum": 23,
			"default": 20
		},
		"upmins_end": {
			"type": "integer",
			"minimum": 0,
			"maximum": 59,
			"default": 0
		},
		"wakealarm_set": {
			"type": "boolean",
			"default": false
		},
		"wakealarm_hour": {
			"type": "integer",
			"minimum": 0,
			"maximum": 23,
			"default": 8
		},
		"wakealarm_mins": {
			"type": "integer",
			"minimum": 0,
			"maximum": 59,
			"default": 0
		},
		"wakealarm_uphours": {
			"type": "boolean",
			"default": false
		},
		"checksockets": {
			"type": "boolean",
			"default": true
		},
		"nsocketnumbers": {
			"type": "string",
			"default": "21,22,80,3689,6991,9091,49152"
		},
		"uldlcheck": {
			"type": "boolean",
			"default": true
		},
		"uldlrate": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 50
		},
		"loadaveragecheck": {
			"type": "boolean",
			"default": false
		},
		"loadaverage": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 40
		},
		"hddiocheck": {
			"type": "boolean",
			"default": true
		},
		"hddiorate": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"default": 401
		},
		"smartcheck": {
			"type": "boolean",
			"default": false
		},
		"checksamba": {
			"type": "boolean",
			"default": true
		},
		"checkcli": {
			"type": "boolean",
			"default": true
		},
		"checkprocnames": {
			"type": "boolean",
			"default": true
		},
		"loadprocnames": {
			"type": "string",
			"default": "smbd,nfsd,mt-daapd,forked-daapd"
		},
		"tempprocnames": {
			"type": "string",
			"default": "in.tftpd"
		},
		"plugincheck": {
			"type": "boolean",
			"default": false
		},
		"syslog": {
			"type": "boolean",
			"default": true
		},
		"verbose": {
			"type": "boolean",
			"default": false
		},
		"fake": {
			"type": "boolean",
			"default": false
		},
		"extraoptions": {
			"type": "string",
			"default": ""
		}
	}
}
